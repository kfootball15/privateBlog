{{#if editingPost}}
	<form {{action 'savePost' post on="submit"}}>
    	{{input class="blogpost-content-edit" value=(mut content) }} {{!-- The {{get}} helper allows you to dynamically specify which property to bind, while the {{mut}} helper allows the binding to be updated from the input. See the respective helper documentation for more detail. --}}
    	<button class="chip inline-block chip-small red" {{action 'cancelEdit' post}}>Cancel</button>
    	<button type="submit" class="chip inline-block chip-small blue"> Save </button>  
    </form>
{{else}}
  <p class={{classMain}} onclick={{action 'editPost' post}}> {{content}} </p>
{{/if}}