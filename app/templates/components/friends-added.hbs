{{#if friends}}
  {{#each friends as |friend|}}
      {{#link-to "profile-public" friend._id}} 
    		<a class="chip inline chip-small green-yellow warn" {{action "removefriend" friend}} > <span>x</span> {{friend.username}} </a> 
		{{/link-to}}
  {{/each}}
{{else}}
  <p class="chip inline chip-small red"> No Friends Yet! </p>
{{/if}}

