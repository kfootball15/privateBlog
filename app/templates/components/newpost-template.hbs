{{#if newBlogPost}}
  <div>
    <form id="form-newpost" {{action 'newPost' model.blogPost on="submit"}}>
      <h2 class="form-signin-heading">New Post</h2>

      {{!--ADD FRIENDS OPTION (Private Only)--}}
      {{#if isPrivate}}
        <div style="width: 400px; margin:auto;">
          {{#if showFriendsList}}
            <div class="chip chip-large block warn" {{action "toggleShowFriendsList"}} >
              <h2> x </h2>
            </div>
          {{else}}
            <div class="chip chip-large block blue-yellow" {{action "toggleShowFriendsList"}} >
              <h2> Add Readers </h2>
            </div>
          {{/if}}
        </div>

        {{#if showFriendsList}}
          {{!-- FRIENDS LIST --}}
          <div class="friendslist-container friendslist-short friendslist-blue">
            {{friends-add 
              friends=session.data.authenticated.user.friends
              modelFriendsArray=modelFriendsArray
              addfriendParent=(action 'addfriend')
            }}
          </div>
          {{!-- ADDED FRIENDS --}}
          <div class="friendslist-container friendslist-short friendslist-blue">
            {{friends-added 
              friends=modelFriendsArray
              removefriendParent=(action 'removefriend')
            }}
          </div>
        {{/if}}

      {{/if}} {{!-- /private --}}

      {{!-- Password Protect Post --}}
      {{#if isPrivate}}
        {{#if setPassword}}
          <div style="text-align: left; margin: 0 70px;">
            <div class="chip chip-small inline red" {{action "toggleSetPassword"}} >NeverMind</div>
            {{input id="newpost-password" type="password" type="text" placeholder="Password" value=postPassword}}
          </div>
        {{else}}
          <div style="text-align: left; margin: 0 70px;">
            <div class="chip chip-small inline blue-yellow" {{action "toggleSetPassword"}} >Password Protect ?</div>
          </div>
        {{/if}}
      {{/if}}
      
      {{!-- STANDARD BLOG-POST INPUTS ... PRIVATE and PUBLIC --}}
      <div id="form-newpost-standardinputs">
        {{input required="required" class="newpost-input newpost-title" type="title" type="text" placeholder="Title" value=title}}
        <br>
        {{input required="required" class="newpost-input newpost-subtitle" type="subtitle" type="text" placeholder="Sub Title" value=subtitle}}
        <br>
        {{textarea required="required" id="newpost-inputblogpost-textarea" class="newpost-content" type="content" type="text" placeholder="Content" value=postcontent}}<br>
        <button class="chip inline chip-small green" type="submit" type="blogPost"> Post </button>
        <button class="chip inline chip-small red" {{action "toggleNewPost"}} > Cancel </button>
      </div>

    </form>
  </div>
{{else}}
  <div>
    <div class="newpost-button">
      <button {{action "toggleNewPost" "private"}} > PRIVATE </button>
    </div>
    <div class="newpost-button">
      <button {{action "toggleNewPost" "public"}}> PUBLIC </button>
    </div>
  </div>
{{/if}} {{!-- /newBlogPost --}}