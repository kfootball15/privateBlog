{{#each model as |postarray|}}

  {{#each postarray as |post|}}
    <div class="blogpost">
      <h2 class="blog-post-title">{{post.title}}</h2>
      <h4 class="blog-post-title">{{post.subtitle}}</h4>
      <h5 class="blog-post-title">{{post.blogType}}</h5>
      <p class="blog-post-meta">{{post.date}}
        {{#link-to "profile-public" post.owner}} {{!-- Link-to will automatically use the post.owners id property https://guides.emberjs.com/v2.10.0/templates/links/  --}}
          {{post.owner.username}}
        {{/link-to}} </p>
      {{#each post.friends as |friend|}}
        <p class="blog-post-meta"> {{#link-to "profile-public" friend._id}} {{friend.username}} {{/link-to}} </p>
      {{/each}}

      <p> {{post.content}} </p>

    </div>
  {{/each}}


{{/each}}

